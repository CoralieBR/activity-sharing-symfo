<div class="formulaire1">
{{ form_start(form, {"attr": {"id": "form-inscription" }}) }}
{# {{ form_widget(form) }} #}
    {# {{ form_label(form.ville, 'Cochez si vous voulez partager vos informations personnelles avec d\'autres membres') }} #}
    <div class="row">
    <div class="col-3">{{form_row(form.pseudo)}}</div>
    <div class="col-3">{{form_row(form.photo)}}</div>
    {# {{ dump(form)}} #}
    <div class="col-3"><img src="https://avatars.dicebear.com/api/{{form.vars.data.photo}}/{{form.vars.data.pseudo}}.svg?r=50&w=150" alt="" id="avatar"></div>
    
    

    </div>

    {# {% block _inscription_info_widget %}
    <label class="form-check-label" for="inscription_info">Cochez la case si vous voulez partager vos informations personnelles avec d'autres membres</label>
    {% endblock %} #}

{{ form_end(form) }}
    <button class="mt-3 btn-info" id="inscription-bt">{{ button_label|default('Enregistrer') }}</button>
</div>
<script>
var avatar = document.querySelector("#avatar")
document.querySelector("#inscription_pseudo").addEventListener("keyup", function(event){
    updateAvatar();
});
document.querySelector("#inscription_photo").addEventListener("change", function(event){
    updateAvatar();
});
function updateAvatar(){
    var photo = document.querySelector("#inscription_photo").value;
    var pseudo = document.querySelector("#inscription_pseudo").value;
    avatar.setAttribute("src", "https://avatars.dicebear.com/api/"+photo+"/"+pseudo+".svg?r=50&w=150");
}
</script>

