{% extends 'base-admin.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
<a href="{{ path('membre_index') }}" class="small-btn">Retour</a>
<div class="formulaire1">
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ membre.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ membre.roles ? membre.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ membre.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ membre.prenom }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ membre.pseudo }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="https://avatars.dicebear.com/api/{{membre.photo}}/{{membre.pseudo}}.svg?r=50&w=150" alt=""></td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ membre.telephone }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ membre.genre }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ membre.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ membre.pays }}</td>
            </tr>
            <tr>
                <th>Distancekm</th>
                <td>{{ membre.distancekm }}</td>
            </tr>
        </tbody>
    </table>

    

    
</div>
{% endblock %}
