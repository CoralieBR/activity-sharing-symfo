{% extends 'base-admin.html.twig' %}

{% block title %}Message de Contact{% endblock %}

{% block body %}
    <a href="{{ path('message_contact_index') }}" class="small-btn">Retour</a>
    <div class="formulaire1">
    <h1>Message de Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message_contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ message_contact.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ message_contact.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message_contact.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ message_contact.telephone }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message_contact.message }}</td>
            </tr>
            <tr>
                <th>Reception</th>
                <td>{{ message_contact.reception ? message_contact.reception|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ message_contact.reponse ? message_contact.reponse|date('d/m/Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('message_contact_edit', {'id': message_contact.id}) }}" class="small-btn">Modifier</a>

    {{ include('message_contact/_delete_form.html.twig') }}
    </div>
{% endblock %}
