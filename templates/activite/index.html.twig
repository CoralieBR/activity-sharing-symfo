{% extends 'base-admin.html.twig' %}

{% block title %}Activite index{% endblock %}

{% block body %}
    <h1>Activite index</h1>
    <div class="formulaire1">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomActivite</th>
                <th>Valide</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                <td>{{ activite.nomActivite }}</td>
                <td>{{ activite.valide ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('activite_show', {'id': activite.id}) }}" class="small-btn_inline">Voir</a>
                    <a href="{{ path('activite_edit', {'id': activite.id}) }}" class="small-btn_inline">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune activité pour l'instant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('activite_new') }}" class="small-btn">Nouvelle activité</a>
    </div>
{% endblock %}
