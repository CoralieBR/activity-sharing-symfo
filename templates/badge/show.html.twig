{% extends 'base-admin.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
    <a href="{{ path('badge_index') }}" class="small-btn">Retour</a>
    <div class="formulaire1">
    <h1>Badge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ badge.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>p{{ badge.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ badge.description }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ badge.valide ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('badge_edit', {'id': badge.id}) }}" class="small-btn">Modifier</a>

    {{ include('badge/_delete_form.html.twig') }}
    </div>
{% endblock %}
